  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug index.test.ts",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
      "runtimeArgs": ["--transpile-only", "--esm"],
      "program": "${workspaceFolder}/index.test.ts",
      "request": "launch",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "type": "node",
      "outputCapture": "std"
    },
    {
      "name": "Debug test cases",
      "request": "launch",
      "runtimeArgs": ["run-script", "test"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "type": "node",
      "outputCapture": "std"
    }
  ]
}
